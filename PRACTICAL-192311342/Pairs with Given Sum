def find_pairs(arr, target):
    pairs = []
    seen = set()
    for num in arr:
        complement = target - num
        if complement in seen:
            pairs.append((complement, num))
        seen.add(num)
    return pairs

# Example usage
arr = [1, 2, 3, 4, 5, 6]
target = 7
print(find_pairs(arr, target))  # Output: [(3, 4), (2, 5), (1, 6)]

